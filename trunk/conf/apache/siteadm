FastCgiExternalServer /home/siteadm_admin/cgi-bin/php-siteadm -socket /home/siteadm_admin/socket/php-siteadm.sock -pass-header Authorization

<Virtualhost *:80>
DocumentRoot "/home/siteadm_admin/public"
ServerName admin.{DOMAIN}
ServerAlias admin.*
ServerAdmin {WEBMASTER_EMAIL}
RedirectPermanent / https://admin.{DOMAIN}/
</VirtualHost>

<Virtualhost *:443>
DocumentRoot "/home/siteadm_admin/public"
ServerName admin.{DOMAIN}
ServerAlias admin.*
ServerAdmin {WEBMASTER_EMAIL}
SSLEngine on
SSLCertificateFile    /etc/ssl/certs/ssl-cert-snakeoil.pem
SSLCertificateKeyFile /etc/ssl/private/ssl-cert-snakeoil.key
CustomLog /home/siteadm_admin/log/apache/access.log combined
ErrorLog /home/siteadm_admin/log/apache/error.log
ScriptAlias /cgi-bin/ /home/siteadm_admin/cgi-bin/
Action php-siteadm /cgi-bin/php-siteadm
<Directory "/home/siteadm_admin/public">
	order allow,deny
	allow from all
	AddHandler php-siteadm .php
</Directory>
<location "/cgi-bin/php-siteadm">
	Order allow,deny
	Allow from env=REDIRECT_STATUS
</location>
</VirtualHost>
