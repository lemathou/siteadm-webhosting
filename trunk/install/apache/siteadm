<Virtualhost *:80>
DocumentRoot "/home/siteadm_admin/public"
ServerName siteadm-2.iprospective.fr
ServerAlias admin.*
ServerAdmin webmaster@iprospective.fr
RedirectPermanent / https://siteadm-2.iprospective.fr/
</VirtualHost>

<Virtualhost *:443>
DocumentRoot "/home/siteadm_admin/public"
ServerName siteadm-2.iprospective.fr
ServerAlias admin.*
ServerAdmin webmaster@iprospective.fr
SSLEngine on
SSLCertificateFile    /etc/ssl/private/server.pem
SSLCertificateKeyFile /etc/ssl/private/server.key
SuexecUserGroup siteadm siteadm
CustomLog /home/siteadm_admin/log/access.log combined
ErrorLog /home/siteadm_admin/log/error.log
<Directory "/home/siteadm_admin/public">
order allow,deny
allow from all
AddHandler fcgid-script .php
FCGIWrapper /home/siteadm_admin/php-config/php-cgi .php
</Directory>
</VirtualHost>
